import Anthropic from '@anthropic-ai/sdk'
import {
  extractVideoId,
  getVideoTranscript,
  getVideoMetadata,
} from '@/lib/youtube'

const anthropic = new Anthropic({
  apiKey: process.env.ANTHROPIC_API_KEY,
})

export async function POST(req: Request) {
  try {
    const { url } = await req.json()

    // Extract video ID
    const videoId = extractVideoId(url)
    if (!videoId) {
      return Response.json({ error: 'Invalid YouTube URL' }, { status: 400 })
    }

    // Fetch metadata and transcript
    const [metadata, transcript] = await Promise.all([
      getVideoMetadata(videoId),
      getVideoTranscript(videoId),
    ])

    // Generate summary with Claude
    const response = await anthropic.messages.create({
      model: 'claude-sonnet-4-5-20250929',
      max_tokens: 2048,
      messages: [
        {
          role: 'user',
          content: `Summarize this YouTube video in Vietnamese.

VIDEO: ${metadata.title}
CHANNEL: ${metadata.channelTitle}

TRANSCRIPT:
${transcript.slice(0, 10000)}

Provide a JSON response with:
{
  "summary": "2-3 paragraphs in Vietnamese",
  "keyPoints": ["5-7 key takeaways as bullet points"],
  "timestamps": [{"time": "MM:SS", "topic": "..."}]
}`,
        },
      ],
    })

    const content = response.content[0]
    const result =
      content.type === 'text' ? JSON.parse(content.text) : null

    return Response.json({
      metadata,
      ...result,
    })
  } catch (error: any) {
    console.error('YouTube summary error:', error)
    return Response.json(
      { error: error.message || 'Failed to summarize video' },
      { status: 500 }
    )
  }
}
